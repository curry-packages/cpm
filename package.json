{
    "name": "cpm",
    "version": "0.1.0",
    "author": "Jonas Oberschweiber, Michael Hanus",
    "maintainer": "Michael Hanus <mh@informatik.uni-kiel.de>",
    "synopsis": "Curry Package Manager: a tool to distribute and install Curry libraries and applications",
    "category": [ "Packaging", "Programming" ],
    "license": "BSD-3-Clause",
    "licenseFile": "LICENSE",
    "dependencies": {
        "det-parse"    : ">= 0.0.1",
        "opt-parse"    : ">= 0.0.3",
        "boxes"        : ">= 0.0.2",
        "json"         : ">= 0.0.2",
        "cass-analysis": ">= 0.0.3",
        "cass"         : ">= 0.0.1"
    },
    "configModule": "CPM.ConfigPackage",
    "executable": {
        "name": "cpm",
        "main": "CPM.Main"
    },
    "testsuite": {
        "src-dir": "src",
        "modules": [ "CPM.Package", "CPM.Resolution", "CPM.LookupSet" ]
    },
    "source": {
        "git": "https://git.ps.informatik.uni-kiel.de/curry-packages/cpm.git",
        "tag": "$version"
    }
}
