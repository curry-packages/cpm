{
    "name": "cpm",
    "version": "3.0.0",
    "author": "Jonas Oberschweiber <jonas@oberschweiber.com>, Michael Hanus <mh@informatik.uni-kiel.de>",
    "maintainer": "Michael Hanus <mh@informatik.uni-kiel.de>",
    "synopsis": "Curry Package Manager: a tool to distribute and install Curry libraries and applications",
    "category": [ "Packaging", "Programming" ],
    "license": "BSD-3-Clause",
    "licenseFile": "LICENSE",
    "dependencies": {
        "abstract-curry": ">= 3.0.0",
        "cdbi"          : ">= 3.0.0",
        "det-parse"     : ">= 2.0.0",
        "opt-parse"     : ">= 2.0.0",
        "boxes"         : ">= 3.0.0",
        "json"          : ">= 3.0.0",
        "cass-analysis" : ">= 3.0.0",
        "cass"          : ">= 3.0.0",
        "csv"           : ">= 2.0.0",
        "flatcurry"     : ">= 3.0.0",
        "wl-pprint"     : ">= 2.0.0",
        "base"          : ">= 2.0.0"
    },
    "compilerCompatibility": {
        "pakcs": ">= 2.0.0",
        "kics2": ">= 2.0.0"
    },
    "configModule": "CPM.ConfigPackage",
    "executable": {
        "name": "cypm",
        "main": "CPM.Main",
        "options": { "kics2" : ":set rts -T" }
    },
    "testsuite": {
        "src-dir": "src",
        "modules": [ "CPM.Package", "CPM.Resolution", "CPM.LookupSet" ]
    },
    "documentation": {
        "src-dir": "docs",
        "main": "manual.tex"
    },
    "source": {
        "git": "https://git.ps.informatik.uni-kiel.de/curry-packages/cpm.git",
        "tag": "$version"
    }
}
